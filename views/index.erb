<h1>Form</h1>

<form clas="doctorForm" action="/doctor" method="post">

  <div class="form-group">
    <label for="name">Enter Name of Doctor:</label>
    <input type="text" name="name" placeholder="'John'" required>
  </div>

  <div class="form-group">
    <label for="specialty">Enter Specialty</label>
    <input type="text" name="specialty" placeholder="'Pediatrics'" required>
  </div>

  <button type="submit" class="btn btn-info">Submit</button>

</form>

<h1>Your Current Doctors</h1>

<% if @doctors.any? %>
  <h3>Here are your doctors:</h3>

  <ul>
    <% @doctors.each do |doctor| %>
      <li><a href="/doctors/<%= doctor.id%>"><%= doctor.name %></a> </li>
    <% end %>
  </ul>

<% else %>

    <p>There are no doctors yet!</p>

<% end %>

<div class="container">
  <a href="/"><button class="btn">Home</a>
</div>
